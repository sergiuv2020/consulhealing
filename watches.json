{
  "watches": [
    {
      "type": "checks",
      "service": "Reporting-Service-DEV",
      "handler": "/etc/consul.d/scripts/manage_watches.sh >> /tmp/consul/logs/watches.log"
    },
    {
      "type": "checks",
      "service": "Reporting-Service-PROD",
      "handler": "/etc/consul.d/scripts/manage_watches.sh >> /tmp/consul/logs/watches.log"
    },
    {
      "type": "checks",
      "service": "Test-Dashboard-DEV",
      "handler": "/etc/consul.d/scripts/manage_watches.sh >> /tmp/consul/logs/watches.log"
    },
    {
      "type": "checks",
      "service": "Test-Dashboard-PROD",
      "handler": "/etc/consul.d/scripts/manage_watches.sh >> /tmp/consul/logs/watches.log"
    }
  ]
}
